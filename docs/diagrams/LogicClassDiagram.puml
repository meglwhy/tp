@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor LOGIC_COLOR_T4
skinparam classBackgroundColor LOGIC_COLOR
left to right direction

package Logic <<Rectangle>> {
  class "<<interface>>\nLogic" as Logic
  class LogicManager
  class Messages

  Logic <|.. LogicManager
  LogicManager --> Messages
}

package "logic.commands" <<Rectangle>> {
  class "{abstract}\nCommand" as Command
  class CommandResult
  class AddHouseholdCommand
  class AddSessionCommand
  class DeleteHouseholdCommand
  class DeleteSessionCommand
  class EditHouseholdCommand
  class EditSessionCommand
  class ViewFullSessionCommand
  class ViewHouseholdSessionsCommand

  Command <|-- AddHouseholdCommand
  Command <|-- AddSessionCommand
  Command <|-- DeleteHouseholdCommand
  Command <|-- DeleteSessionCommand
  Command <|-- EditHouseholdCommand
  Command <|-- EditSessionCommand
  Command <|-- ViewFullSessionCommand
  Command <|-- ViewHouseholdSessionsCommand
}

package "logic.commands.exceptions" <<Rectangle>> {
  class CommandException
  CommandException --|> Exception
}

package "logic.parser" <<Rectangle>> {
  class "<<interface>>\nParser<T extends Command>" as Parser
  class AddHouseholdCommandParser
  class AddSessionCommandParser
  class DeleteHouseholdCommandParser
  class DeleteSessionCommandParser
  class EditHouseholdCommandParser
  class EditSessionCommandParser
  class ViewFullSessionCommandParser
  class ViewHouseholdSessionsCommandParser
  class ParserUtil
  class SessionIdentifier
  class SessionParserUtil

  Parser <|.. AddHouseholdCommandParser
  Parser <|.. AddSessionCommandParser
  Parser <|.. DeleteHouseholdCommandParser
  Parser <|.. DeleteSessionCommandParser
  Parser <|.. EditHouseholdCommandParser
  Parser <|.. EditSessionCommandParser
  Parser <|.. ViewFullSessionCommandParser
  Parser <|.. ViewHouseholdSessionsCommandParser

  ' Parser to Command associations
  AddHouseholdCommandParser ..> AddHouseholdCommand : parses >
  AddSessionCommandParser ..> AddSessionCommand : parses >
  DeleteHouseholdCommandParser ..> DeleteHouseholdCommand
  DeleteSessionCommandParser ..> DeleteSessionCommand
  EditHouseholdCommandParser ..> EditHouseholdCommand
  EditSessionCommandParser ..> EditSessionCommand
  ViewFullSessionCommandParser ..> ViewFullSessionCommand
  ViewHouseholdSessionsCommandParser ..> ViewHouseholdSessionsCommand
}

package "logic.parser.exceptions" <<Rectangle>> {
  class ParseException
  ParseException --|> IllegalValueException
}

' LogicManager uses parsers and commands indirectly
LogicManager --> CommandResult
LogicManager --> Parser

@enduml
